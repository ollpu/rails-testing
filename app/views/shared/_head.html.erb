
<%
  def create_pagelink(text, target, thispage)
    if(thispage)
      thisp = "thispage"
    else
      thisp = ""
    end
    
    return link_to text, target, { :class => thisp }
  end
%>
<div class="head">
  <h1><%= @sitetitle %></h1>
  <hr>
  <%= create_pagelink "ETUSIVU", root_path, current_page?('/') %>
  <%= create_pagelink "ARTIKKELIT", articles_path,
    current_page?(controller: 'articles') %>
</div>
<%= ("<br/>"*3).html_safe %>
