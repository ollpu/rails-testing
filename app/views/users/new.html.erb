<h1>Luo käyttäjätili</h1>

<%= form_for @user do |f| %>
  <ul class="warn">
    <% @user.errors.each do |attr, msg| %>
      <%= "<li>#{msg}</li>".html_safe if @user.errors[attr].first == msg %>
    <% end %>
  </ul>
  
  <table>
    <tr>
      <td>
        <%= f.label :email, "Sähköpostiosoite: " %>
      </td>
      <td>
        <%= f.text_field :email %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :full_name, "Koko nimi: " %>
      </td>
      <td>
        <%= f.text_field :full_name %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :password, "Salasana: " %>
      </td>
      <td>
        <%= f.password_field :password %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :password_confirmation, "Vahvista salasana: " %>
      </td>
      <td>
        <%= f.password_field :password_confirmation %>
      </td>
    </tr>
  </table>
  <%= f.submit "Rekisteröidy" %>
<% end %>
