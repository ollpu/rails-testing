
<div id="articles_container" data-clean="true">
  <% @articles.each do |article| %>
    <%= render "/articles/render", :article => article, :do_truncation => true %>
  <% end %>
</div>

<% if @cut %>
  <%= link_to "Lataa lisää", articles_more_path(:depth => @depth),
    { :class => "action load_more_articles", :remote => true } %>
<% end %>



<% if current_user && current_user.privileges >= User.priv_level_writer %>
  <br/><br/>
  <%= link_to "LUO UUSI ARTIKKELI", new_article_path, { class: "action" } %>
<% end %>
