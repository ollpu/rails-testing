<h1>Muokkaa artikkelia</h1>
<%= form_for @article do |f| %>
  <table>
    <tr><td>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
    </td></tr>
    <tr><td>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </td></tr>
    <tr><td>
      <%= f.submit %>
    </td></tr>
  </table>
<% end %>
